<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Symfony Demo Application{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body id="{% block body_id %}{% endblock %}">
        {% block header %}
            <header>
                <div class="navbar navbar-default navbar-static-top" role="navigation">
                    <div class="container">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="{{ path('homepage') }}">
                                Authentication demo
                            </a>

                            <button type="button" class="navbar-toggle"
                                    data-toggle="collapse"
                                    data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-right">
                                {% block header_navigation_links %}
                                    <li>
                                        <a href="{{ path('homepage') }}">
                                            <i class="fa fa-home"></i> Homepage
                                        </a>
                                    </li>

                                    {% if app.user %}
                                        <li role="presentation">
                                            <a href="{{ path('change_password') }}">Change Password</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('security_logout') }}">
                                                <i class="fa fa-sign-out"></i> Logout
                                            </a>
                                        </li>
                                    {% else %}
                                        <li><a href="{{ path('security_login_form') }}">Login</a></li>
                                        <li><a href="{{ path('security_register_form') }}">Register</a></li>
                                        {% endif %}
                                {% endblock %}
                            </ul>
                        </div>
                    </div>
                </div>
            </header>
        {% endblock %}

        <div class="container body-container">
            {% block body %}
                <div class="row">
                    <div id="main" class="col-sm-9">
                    {% block main %}{% endblock %}
                </div>

                <div id="sidebar" class="col-sm-3">
                    {% block sidebar %}
                        <div class="section about">
                        </div>
                    {% endblock %}
                </div>
            </div>
        {% endblock %}
    </div>

    {% block footer %}
        <footer>
            <div class="container">
                <div class="row">
                    <div id="footer-copyright" class="col-md-6">
                        <p>&copy; {{ 'now'|date('Y') }} - The Symfony Project</p>
                        <p>MIT License</p>
                    </div>
                    <div id="footer-resources" class="col-md-6">
                        <p>
                            <a href="https://twitter.com/symfony"><i class="fa fa-twitter"></i></a>
                            <a href="https://www.facebook.com/SensioLabs"><i class="fa fa-facebook"></i></a>
                            <a href="http://symfony.com/blog"><i class="fa fa-rss"></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/app.js') }}"></script>
    {% endblock %}

</body>
</html>
